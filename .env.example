# FastAPI URL Shortener configuration
APP_NAME=URL Shortener API
APP_ENV=development
APP_DEBUG=true
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=replace-with-long-random-secret
ACCESS_TOKEN_EXPIRES_MINUTES=30
REFRESH_TOKEN_EXPIRES_MINUTES=43200
ALGORITHM=HS256

# MongoDB
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=url_shortener
MONGODB_USER_COLLECTION=users
MONGODB_URL_COLLECTION=urls
MONGODB_CLICK_COLLECTION=click_events

# Redis
REDIS_URI=redis://redis:6379/0
REDIS_CACHE_TTL_SECONDS=3600

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_DEFAULT_QUEUE=shortener_tasks

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Observability
LOG_LEVEL=INFO
